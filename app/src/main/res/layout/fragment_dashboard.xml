<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.main.dashboard.Dashboard">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:contentScrim="@color/white">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:background="@color/white"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_menu"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:contentDescription="@string/drawer_menu_toggle"
                            app:tint="@color/color_main_2" />

                        <TextView
                            android:id="@+id/welcomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/hello_jane_welcome_back"
                            android:textColor="@color/color_main_2"
                            app:layout_constraintBottom_toBottomOf="@+id/toggle"
                            app:layout_constraintStart_toEndOf="@+id/toggle" />

                        <ImageView
                            android:id="@+id/inbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_20dp"
                            android:contentDescription="@string/inbox_messages"
                            android:src="@drawable/ic_mail"
                            app:layout_constraintBottom_toBottomOf="@+id/welcomeText"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/welcomeText"
                            app:layout_constraintTop_toTopOf="@+id/toggle"
                            app:tint="@color/color_main_2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/parent_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/new_login_bg"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dashboard_top_card_bg"
                        android:paddingVertical="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text="@string/my_wallet_ballance"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/color_main_2"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/walletBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins"
                            android:text="@string/wallet_balance"
                            android:textColor="@color/color_main_2"
                            app:layout_constraintEnd_toEndOf="@+id/textView24"
                            app:layout_constraintStart_toStartOf="@+id/textView24"
                            app:layout_constraintTop_toBottomOf="@+id/textView24" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fundWalletBtn"
                            navigation="@{@id/action_dashboard_to_fundWalletViewPagerPage}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_25dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/walletBalance"
                            app:layout_constraintStart_toStartOf="@+id/walletBalance"
                            app:layout_constraintTop_toBottomOf="@+id/walletBalance">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/fund_wallet_bg"
                                android:elevation="@dimen/dimen_10dp"
                                android:paddingHorizontal="@dimen/dimen_5dp"
                                android:paddingVertical="@dimen/dimen_10dp">

                                <ImageView
                                    android:id="@+id/my_dao"
                                    android:layout_width="@dimen/dimen_25dp"
                                    android:layout_height="@dimen/dimen_25dp"
                                    android:contentDescription="@string/fundWallet"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_add_circle_24" />

                                <TextView
                                    android:id="@+id/my_dao_accounts"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="@dimen/dimen_5dp"
                                    android:gravity="center"
                                    android:text="@string/fundMyWallet"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/my_dao"
                                    app:layout_constraintStart_toEndOf="@+id/my_dao"
                                    app:layout_constraintTop_toTopOf="@+id/my_dao" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                            <!-- ROW ONE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_40dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3"
                    tools:layout_editor_absoluteX="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/withdrawal"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        navigation="@{@id/action_dashboard_to_withdrawal2}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/transfer"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/withdrawImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/withdrawText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_withdraw" />

                            <TextView
                                android:id="@+id/withdrawText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/withdrawal"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/withdrawImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/withdrawImage"
                                app:layout_constraintTop_toBottomOf="@+id/withdrawImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/transfer"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        app:cardBackgroundColor="@color/white"
                        navigation="@{@id/action_dashboard_to_fundsTransfer}"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/withdrawal"
                        app:layout_constraintEnd_toStartOf="@+id/deposit"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/withdrawal"
                        app:layout_constraintTop_toTopOf="@+id/withdrawal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/transferImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/transferText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_transfer" />

                            <TextView
                                android:id="@+id/transferText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/transfer"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/transferImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/transferImage"
                                app:layout_constraintTop_toBottomOf="@+id/transferImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/deposit"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        app:cardBackgroundColor="@color/white"
                        navigation="@{@id/action_dashboard_to_deposit2}"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/withdrawal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/transfer"
                        app:layout_constraintTop_toTopOf="@+id/withdrawal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/depositImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/depositText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_deposit" />

                            <TextView
                                android:id="@+id/depositText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/deposit"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/depositImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/depositImage"
                                app:layout_constraintTop_toBottomOf="@+id/depositImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--// ROW TWO //-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="@+id/row1"
                    app:layout_constraintStart_toStartOf="@+id/row1"
                    app:layout_constraintTop_toBottomOf="@+id/row1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/airtime"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        navigation="@{@id/action_dashboard_to_airtime3}"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/payBills"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/buyAirtimeImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/buyAirtimeText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_new_airtime" />

                            <TextView
                                android:id="@+id/buyAirtimeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/buyAirtime"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/buyAirtimeImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/buyAirtimeImage"
                                app:layout_constraintTop_toBottomOf="@+id/buyAirtimeImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/payBills"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        navigation="@{@id/action_dashboard_to_payBills2}"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/airtime"
                        app:layout_constraintEnd_toStartOf="@+id/openAccount"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/airtime"
                        app:layout_constraintTop_toTopOf="@+id/airtime">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/payBillsImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/payBillsText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_new_bill_payment" />

                            <TextView
                                android:id="@+id/payBillsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/billsPayment"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/payBillsImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/payBillsImage"
                                app:layout_constraintTop_toBottomOf="@+id/payBillsImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/openAccount"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        app:cardBackgroundColor="@color/white"
                        navigation="@{@id/action_dashboard_to_newAccountOpeningViewPager}"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/airtime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/payBills"
                        app:layout_constraintTop_toTopOf="@+id/airtime">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/openAccountImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/openAccountText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_new_open_account" />

                            <TextView
                                android:id="@+id/openAccountText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/openAccount"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/openAccountImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/openAccountImage"
                                app:layout_constraintTop_toBottomOf="@+id/openAccountImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--// ROW THREE //-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="@+id/row2"
                    app:layout_constraintStart_toStartOf="@+id/row2"
                    app:layout_constraintTop_toBottomOf="@+id/row2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bvn"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/betting"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/bvnImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/bvnText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_new_bvn" />

                            <TextView
                                android:id="@+id/bvnText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/bvn"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/bvnImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/bvnImage"
                                app:layout_constraintTop_toBottomOf="@+id/bvnImage" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/betting"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_80dp"
                        app:cardBackgroundColor="@color/white"
                        navigation="@{@id/action_dashboard_to_bettingAndLottery}"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/bvn"
                        app:layout_constraintEnd_toStartOf="@+id/eNaira"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/bvn"
                        app:layout_constraintTop_toTopOf="@+id/bvn">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dimen_10dp"
                            android:elevation="@dimen/dimen_10dp">

                            <ImageView
                                android:id="@+id/bettingImage"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:contentDescription="@string/fundWallet"
                                app:layout_constraintBottom_toTopOf="@+id/bettingText"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_new_betting" />

                            <TextView
                                android:id="@+id/bettingText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/bettingAndLottery"
                                android:textColor="@color/keysMoniColor"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/bettingImage"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/bettingImage"
